<div id="faqs-container" class="container">

  <h2>Add to the knowledge database</h2>

  <div id="faqs-form">

    <%= form_for @faq do |faq_form| %>
      <table class="new-faq-form">

        <tr>
          <%= faq_form.label :question %>
          <%= faq_form.text_field :question %>
        </tr>

        <%= faq_form.fields_for :faq_answers do |faq_answers_form| %>
        <tr>
          <%= faq_answers_form.label :answer %>
          <%= faq_answers_form.text_field :answer %>
        </tr>
        
        <% end %>
      </table>    
      </br>
      <div class='submit-btn'>
          <%= faq_form.submit "Submit questions", :class => 'btn' %>
      </div>
      <% end %>

    </div>
</div>