<div id="table-name"></div>
<table class="table table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
    <th colspan=3>Buyer Persona</th>
    <th colspan=4>DITE</th>
  </tr>
  <% @units.each do |unit| %>
  <tr>
    <td><%= link_to unit.name, unit_path(unit.id) %></td>
    <td><%= unit.description %></td>
    <td><%= unit.unit_type %></td>
    <td>CMO?</br> <%= unit.cmo %></td>
    <td>Creative Agency?</br> <%= unit.creative_agency %></td>
    <td>Social Strategist?</br> <%= unit.social_strategist %></td>
    <td>Discovery:</br> <%= unit.dite_discovery %></td>
    <td>Interaction:</br> <%= unit.dite_interaction %></td>
    <td>Transaction:</br> <%= unit.dite_transaction %></td>
    <td>Endorsement:</br> <%= unit.dite_endorsement %></td>
  </tr>
  <% end %>
</table>