
<div class="case-study-container">
  <div class="row">
  <% @profile.case_studies.each do |case_study| %>
  
  <%= link_to edit_btn("edit"), edit_profile_case_study_path(@profile, case_study), :class => 'btn btn-small edit-btn pull-right' %>

    <div class="span5">
      <h4 class="case-study-title"><%= case_study.title %></h4>
        <div class="case-study-info">
          <%= markdown(case_study.description) %>
        </div><!-- end for case study info -->
    </div>


        
    <div class="span4">
      <a href="#case-study-modal" data-toggle="modal"><%= image_tag case_study.img_url, :class => 'case-study-img' %></a>
    </div><!-- end case study image -->
    

      <div id="case-study-modal" class="modal hide fade" aria-hidden="true">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>
        <div class="modal-body">
          <%= image_tag case_study.img_url %>
        </div>
      </div><!-- end case study modal -->
  <% end %>

  </div><!-- end row -->

  <%= link_to add_btn(" Add case study"), new_profile_case_study_path(@profile), :class => 'btn btn-small add-btn' %>


</div><!-- end case study container -->