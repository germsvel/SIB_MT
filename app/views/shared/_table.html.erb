<h3>Units</h3>
<div id="table-name"></div>
<table class="table table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
    <th colspan=3>Buyer Persona</th>
    <th colspan=4>DITE</th>
    <th>Delete</th>
  </tr>
  <% @units.each do |unit| %>
  <tr>
    <td><%= link_to unit.name, unit_path(unit) %></td>
    <td><%= unit.description %></td>
    <td><%= unit.unit_type %></td>
    <td>CMO? <%= unit.cmo %></td>
    <td>Creative Agency? <%= unit.creative_agency %></td>
    <td>Social Strategist? <%= unit.social_strategist %></td>
    <td>Discovery: <%= unit.dite_discovery %></td>
    <td>Interaction: <%= unit.dite_interaction %></td>
    <td>Transaction: <%= unit.dite_transaction %></td>
    <td>Endorsement: <%= unit.dite_endorsement %></td>
    <td><%= link_to 'Delete', unit_path(unit), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table>